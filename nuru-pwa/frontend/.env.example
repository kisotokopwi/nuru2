# API Configuration
VITE_API_BASE_URL="http://localhost:3000/api"
VITE_API_TIMEOUT=30000

# PWA Configuration
VITE_APP_NAME="Nuru Company PWA"
VITE_APP_SHORT_NAME="Nuru PWA"
VITE_APP_DESCRIPTION="Worker Supervision & Dual-Invoice System"
VITE_APP_THEME_COLOR="#1976d2"
VITE_APP_BACKGROUND_COLOR="#ffffff"

# Authentication
VITE_JWT_STORAGE_KEY="nuru_auth_token"
VITE_REFRESH_STORAGE_KEY="nuru_refresh_token"

# Offline Storage
VITE_DB_NAME="nuru_offline_db"
VITE_DB_VERSION=1
VITE_SYNC_INTERVAL=300000

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_GEOLOCATION=true
VITE_ENABLE_CAMERA=true

# Development
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL="debug"

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES="pdf,jpg,jpeg,png"

# Company Information
VITE_COMPANY_NAME="Nuru Company"
VITE_COMPANY_LOGO="/logo.png"
VITE_SUPPORT_EMAIL="support@nurucompany.com"